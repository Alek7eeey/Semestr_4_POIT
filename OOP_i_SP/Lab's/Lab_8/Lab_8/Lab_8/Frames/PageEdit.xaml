<Page x:Class="Lab_8.Frames.PageEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab_8.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEdix">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.14*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <WrapPanel Margin="10" Grid.Row="0" Cursor="Hand">
            <Button Height="30" x:Name="nextBtn" Width="80" Click="nextBtn_Click">Назад</Button>
            <Button x:Name="backBtn" Height="30" Margin="7 0 0 0" Width="80" Click="backBtn_Click">Вперёд</Button>
        </WrapPanel>
        <Frame Grid.Row="1" x:Name="mainFrame2">
        </Frame>
    </Grid>
</Page>
