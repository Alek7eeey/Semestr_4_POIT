        <Image Grid.Column="1" VerticalAlignment="Top" Margin="10,10,10,10" Source="D:\studing\4_semestr\OOP_i_SP\Lab's\Lab_8\Photo\Ekipazh.jpg" Grid.ColumnSpan="2"/>
